<h1>All the restaurants!</h1>
<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <li>
        <%= flash[:notice]%>
      </li>
        <br>
    </div>
  </div>
<%end%>
<div>
    <%= link_to "Add your restaurant", new_restaurant_path%>
</div>
<br>
<%if @restaurants%>
  <% @restaurants.each do |q| %>
    <div class = "field">
      <%= link_to q.name, restaurant_path(q) %>
      <li><%= q.address %></li>
      <li><%= q.city %></li>
      <li><%= q.state %></li>
      <li><%= q.zipcode %></li>
      <%if q.description%>
        <li><%= q.description %></li>
      <%end%>
      <%if q.category%>
        <li><%= q.category %></li>
      <%end%>
    </div>
  <%end%>
<%end%>
